
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainVioletDark"
    tools:context=".MainActivity">


    <!--Изображние сверху-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAndButton">
        <ImageView
            android:id="@+id/goal_add_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@android:drawable/ic_menu_gallery"
        />
        <Button
            android:id="@+id/goal_add_choose_image_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_add"
            android:backgroundTint="@android:color/white"
        />
        </RelativeLayout>
        <!--Блок с целью-->
        <ImageView
            android:id="@+id/goal_add_name_snake_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/imageAndButton"
            android:tint="@color/colorYellow"
            android:src="@drawable/goal_add_snake"
    />

        <EditText
            android:inputType="text"
            android:id="@+id/goal_add_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/goal_add_name_snake_icon"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/imageAndButton"
            android:hint="@string/goal_add_name_text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:backgroundTint="@android:color/white"
    />


        <!--Блок с целью-->
        <ImageView
            android:id="@+id/goal_add_date_snake_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/goal_add_name_text"
            android:src="@drawable/goal_add_snake"
            android:tint="@color/colorYellow"
    />

        <!--Кнопка Добавить цель-->
        <Button
            android:text="@string/goal_add_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_alignParentBottom="true"
            android:id="@+id/goal_add_button"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_rectangle"
    />
        <Button
            android:text="@string/goal_add_deadline_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/goal_add_date_snake_icon"
            android:layout_below="@id/goal_add_name_text"
            android:id="@+id/button1"
            android:background="@drawable/button_rectangle"
    />

    </RelativeLayout>
