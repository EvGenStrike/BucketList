
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainVioletDark"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:id="@+id/add_goal_screen_choose_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/add_goal_screen_goal_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@android:drawable/ic_menu_gallery"
        />

        <Button
            android:id="@+id/add_goal_screen_choose_image_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_add"
            android:backgroundTint="@android:color/white"
        />

    </RelativeLayout>
    
    <ImageView
        android:id="@+id/add_goal_screen_add_goal_name_snake_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/add_goal_screen_choose_image_layout"
        android:tint="@color/colorYellow"
        android:src="@drawable/goal_add_snake"
    />

    <EditText
        android:id="@+id/add_goal_screen_add_goal_name_edit_text"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/add_goal_screen_add_goal_name_snake_icon"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/add_goal_screen_choose_image_layout"
        android:hint="@string/add_goal_screen_add_goal_name_edit_text"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
    />

    <ImageView
        android:id="@+id/add_goal_screen_add_goal_deadline_snake_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/add_goal_screen_add_goal_name_edit_text"
        android:src="@drawable/goal_add_snake"
        android:tint="@color/colorYellow"
    />

    <Button
        android:id="@+id/add_goal_screen_add_goal_deadline_button"
        android:text="@string/add_goal_screen_add_goal_deadline_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/add_goal_screen_add_goal_deadline_snake_icon"
        android:layout_below="@id/add_goal_screen_add_goal_name_edit_text"
        android:background="@drawable/button_rectangle"
    />

    <Button
        android:id="@+id/add_goal_screen_add_goal_button"
        android:text="@string/add_goal_screen_add_goal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_rectangle"
    />

</RelativeLayout>
