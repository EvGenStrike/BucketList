<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Изображние сверху-->
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/goal_add_image" />

    <!--Блок с целью-->
    <ImageView
        android:id="@+id/goal_add_name_snake_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/goal_add_image"
        android:src="@drawable/goal_add_snake"
    />

    <EditText
        android:id="@+id/goal_add_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/goal_add_name_snake_icon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/goal_add_image"
        android:hint="@string/goal_add_name_text"
    />


    <!--Блок с целью-->
    <ImageView
        android:id="@+id/goal_add_date_snake_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/goal_add_name_text"
        android:src="@drawable/goal_add_snake"
    />

    <EditText
        android:id="@+id/goal_add_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/goal_add_name_snake_icon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/goal_add_name_text"
        android:hint="@string/goal_add_date_text"
    />

    <!--Кнопка Добавить цель-->
    <Button
        android:text="@string/goal_add_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_alignParentBottom="true"
        android:id="@+id/goal_add_button"
    />

</RelativeLayout>