<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/goal_screen_image"
        android:src="@drawable/snake_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
    />

    <ImageView
        android:id="@+id/goal_name_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/goal_screen_image"
        android:background="@drawable/rectangle_1"
    />
    <TextView
        android:id="@+id/goal_name_text"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="goal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/goal_screen_image"
    />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goal_screen_calendar_button"
        android:layout_below="@id/goal_screen_image"
        android:layout_toRightOf="@id/goal_name_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_my_calendar"
        app:fabSize="mini"
    />

    <ImageView
        android:id="@+id/subgoals_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/goal_name_text"
        android:layout_above="@id/goal_screen_python"
        android:background="@drawable/subgoals_background_rectangle"
    />
    <ListView
        android:inputType="text"
        android:id="@+id/goal_screen_subgoals_list_view"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="35dp"
        android:layout_below="@id/goal_name_text"
        android:layout_above="@id/goal_screen_python"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

     <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goal_screen_add_subgoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:layout_above="@id/goal_screen_python"
        app:srcCompat="@drawable/ic_add"
        app:maxImageSize="60dp"
    />

    <ImageView
        android:id="@+id/goal_screen_python"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/goal_screen_do_goal_button"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_1"
    />

    <Button
        android:id="@+id/goal_screen_do_goal_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:text="@string/goal_screen_do_goal"
        android:background="@drawable/button_rectangle"
        android:textSize="18sp"
    />


</RelativeLayout>