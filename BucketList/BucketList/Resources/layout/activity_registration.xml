<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/registration_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration_header_text"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="#000000"
    />


    <TextView
        android:id="@+id/registration_add_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:hint="@string/registration_add_name_text"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/registration_header_text"
    />


    <ImageView
        android:id="@+id/registration_add_name_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/registration_add_name_text"
        android:background="@drawable/registration_background_rectangle"
    />
    <EditText
        android:inputType="text"
        android:id="@+id/registration_add_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/registration_add_name_text"
        android:hint="@string/registration_add_name_edittext"
        android:background="@drawable/registration_background_rectangle"
    />

    <TextView
        android:id="@+id/registration_profile_photo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration_profile_photo_text"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_below="@id/registration_add_name_edittext"
    />


    <ImageView
        android:id="@+id/registration_add_user_photo"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/registration_profile_photo_text"
    />

    <ImageView
        android:id="@+id/registration_snake"
        android:src="@drawable/snake_image"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="200dp"
        android:layout_below="@id/registration_add_user_photo"
        android:layout_above="@id/registration_button"
        android:clickable="true"
    />


    <Button
        android:id="@+id/registration_button"
        android:text="@string/registration_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_alignParentBottom="true"
    />


</RelativeLayout>