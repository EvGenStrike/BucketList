<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainVioletDark"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/registration_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration_header_text"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="@android:color/white"
    />


    <TextView
        android:id="@+id/registration_add_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:hint="@string/registration_add_name_text"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/registration_header_text"
    />


    <!--<ImageView
        android:id="@+id/registration_add_name_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/registration_add_name_text"
        android:background="@drawable/registration_background_rectangle"
    />-->
    <EditText
        android:inputType="text"
        android:id="@+id/registration_add_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/registration_add_name_text"
        android:hint="@string/registration_add_name_edittext"
        android:background="@drawable/green_rect"
    />

    <TextView
        android:id="@+id/registration_profile_photo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration_profile_photo_text"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/registration_add_name_edittext"
    />


    <!--<ImageView
        android:id="@+id/registration_add_user_photo"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/registration_profile_photo_text"
    />-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_profile_photo_text"
        android:id="@+id/imageAndButtonReg">
        <ImageView
            android:id="@+id/registration_add_user_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@android:drawable/ic_menu_gallery"
        />
        <Button
            android:id="@+id/registration_add_user_photo_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_add"
            android:backgroundTint="@android:color/white"
        />
        </RelativeLayout>


    <ImageView
        android:id="@+id/registration_snake"
        android:src="@drawable/snake_image"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_height="180dp"
        android:layout_below="@id/imageAndButtonReg"
        android:layout_above="@id/registration_button"
        android:clickable="true"
    />


    <Button
        android:id="@+id/registration_button"
        android:text="@string/registration_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_rectangle"
    />


</RelativeLayout>