<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/statistics_screen_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_menu_left_arrow"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:focusable="true"
    />

    <ImageView
        android:id="@+id/statistics_screen_user_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/snake_image"
    />

    <ProgressBar
        android:id="@+id/statistics_screen_cirle_progress_bar"
        android:layout_below="@id/statistics_screen_user_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
    />
    
    <ImageView
        android:id="@+id/statisctics_sreen_done_box"
        android:layout_below="@id/statistics_screen_cirle_progress_bar"
        android:layout_marginLeft="60dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rectangle_for_statistics_done"
    />
    <TextView
        android:id="@+id/statisctics_sreen_done_text"
        android:layout_below="@id/statistics_screen_cirle_progress_bar"
        android:layout_toRightOf="@id/statisctics_sreen_done_box"
        android:text="@string/statistics_box_done"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/goals_item"
    />

    <ImageView
        android:id="@+id/statisctics_sreen_not_done_box"
        android:layout_below="@id/statistics_screen_cirle_progress_bar"
        android:layout_toRightOf="@id/statisctics_sreen_done_text"
        android:layout_marginLeft="50dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rectangle_for_statistics_not_done"
    />
    <TextView
        android:id="@+id/statisctics_sreen_not_done_text"
        android:layout_below="@id/statistics_screen_cirle_progress_bar"
        android:layout_toRightOf="@id/statisctics_sreen_not_done_box"
        android:text="@string/statistics_box_not_done"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/goals_item"
    />


</RelativeLayout>