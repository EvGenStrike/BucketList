<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainVioletDark"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/account_screen_back_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_menu_left_arrow"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:focusable="true"
        android:backgroundTint="@android:color/white"
    />

     <ImageView
        android:id="@+id/account_screen_user_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/account_screen_back_arrow"
        android:src="@drawable/snake_image"
    />

    <TextView
        android:id="@+id/account_screen_user_name_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/account_screen_user_photo"
        android:text="user_name"
        style="@style/account_text"
        android:gravity="center_horizontal"
    />

    <RelativeLayout
        android:id="@+id/account_screen_change_name_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/account_screen_user_name_text">

        <ImageView
            android:id="@+id/account_screen_star_for_name_change_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_ic_star_black_36dp"
            android:layout_centerVertical="true"
        />

        <!--<TextView
            android:id="@+id/account_screen_change_name_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/account_screen_change_name_arrow"
            android:layout_toRightOf="@id/account_screen_star_for_name_change_image"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/account_change_name"
            style="@style/account_text"
            android:gravity="center_vertical"
        />-->
        <EditText
            android:id="@+id/account_screen_change_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/account_screen_change_name_arrow"
            android:layout_toRightOf="@id/account_screen_star_for_name_change_image"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:hint="@string/account_change_name"
            style="@style/account_text"
            android:textColorHint="#AAAAAA"
            android:gravity="center_vertical"
            android:inputType="text"
        />

        <ImageView
            android:id="@+id/account_screen_change_name_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/arrow_chevron_right"
        />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/account_screen_registration_date_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/account_screen_change_name_layout">

        <ImageView
            android:id="@+id/account_screen_star_for_registration_date_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_ic_star_black_36dp"
            android:layout_centerVertical="true"
        />

        <TextView
            android:id="@+id/account_screen_registration_date_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/account_screen_registration_date_arrow"
            android:layout_toRightOf="@id/account_screen_star_for_registration_date_image"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/account_registration_date"
            style="@style/account_text"
            android:gravity="center_vertical"
        />

        <ImageView
            android:id="@+id/account_screen_registration_date_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/arrow_chevron_right"
        />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/account_screen_account_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/account_screen_account_delete_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_rectangle"
            android:text="@string/account_delete_account"
            android:gravity="center_vertical"
            android:textAlignment="center"
        />

    </RelativeLayout>


</RelativeLayout>