<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainVioletDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    <ListView
        android:id="@+id/goalsListView"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_future_goals"
        android:layout_above="@id/deadlineCalendar"
        android:divider="@null"
        android:dividerHeight="0dp"
    />
    <ImageView
        android:id="@+id/filterIcon"
        android:layout_width="30dp"
        android:layout_marginStart="250dp"
        android:layout_height="40dp"
        android:src="@drawable/filter_icon"
        />
    <Button
        android:id="@+id/button_future_goals"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="Фильтр"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/filterIcon"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:textSize="12dp"
        android:backgroundTint="@color/colorMainViolet"
    />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@id/fab"
        android:layout_alignTop="@id/fab"
        android:layout_marginTop="4dp"
        android:id="@+id/deadlineCalendar"
        android:layout_marginStart="16dp">
        <Button
            android:id="@+id/calendarButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/deadlineCalendar"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:alpha="0"
            />
        <TextView
            android:id="@+id/date1"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:gravity="center"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />
        <TextView
            android:id="@+id/date2"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:layout_toRightOf="@id/date1"
            android:gravity="center"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />
        <TextView
            android:id="@+id/date3"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:layout_toRightOf="@id/date2"
            android:gravity="center"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />
        <TextView
            android:id="@+id/date4"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:layout_toRightOf="@id/date3"
            android:gravity="center"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />
        <TextView
            android:id="@+id/date5"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:layout_toRightOf="@id/date4"
            android:gravity="center"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />


        <ImageView
            android:id="@+id/python"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:alpha="0.9"
            android:layout_toLeftOf="@id/date3"
            android:layout_height="wrap_content"
            android:src="@drawable/pythoncalendar1"
            android:layout_alignTop="@id/date1"
            android:layout_alignBottom="@id/date1"
            android:scaleX="1.2"
            android:layout_marginTop="-8dp"
        />


    </RelativeLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add"
        android:backgroundTint="@color/colorMainViolet"
        app:maxImageSize="60dp"
    />

    <!--<BucketList.CustomCalendarView
        android:id="@+id/allGoalsCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/fab"
    />-->

