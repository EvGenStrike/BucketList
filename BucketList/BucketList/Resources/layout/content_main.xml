<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/deadlineCalendar"
        android:id="@+id/goalsListView" />


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/fab"
        android:layout_alignTop="@id/fab"
        android:id="@+id/deadlineCalendar">

        <TextView
            android:id="@+id/date1"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:gravity="center_horizontal"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />
        <TextView
            android:id="@+id/date2"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:layout_toRightOf="@id/date1"
            android:gravity="center_horizontal"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />
        <TextView
            android:id="@+id/date3"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:layout_toRightOf="@id/date2"
            android:gravity="center_horizontal"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />
        <TextView
            android:id="@+id/date4"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:layout_toRightOf="@id/date3"
            android:gravity="center_horizontal"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />
        <TextView
            android:id="@+id/date5"
            android:layout_width="@dimen/date_python_calendar_width"
            android:layout_height="@dimen/date_python_calendar_heigth"
            android:layout_toRightOf="@id/date4"
            android:gravity="center_horizontal"
            android:background="@drawable/dateInCalendarWithPython"
            android:textAppearance="@style/TextDate"
        />


        <ImageView
            android:id="@+id/python"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:alpha="0.70"
            android:layout_toLeftOf="@id/date3"
            android:layout_height="match_parent"
            android:src="@drawable/pythoncalendar1"
        />


    </RelativeLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add"
        app:maxImageSize="60dp"
    />

    <!--<BucketList.CustomCalendarView
        android:id="@+id/allGoalsCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/fab"
    />-->

