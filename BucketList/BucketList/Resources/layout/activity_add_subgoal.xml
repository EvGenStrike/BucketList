
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainVioletDark"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/subgoal_add_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/snake_image"
    />

    <ImageView
        android:id="@+id/subgoal_add_name_snake_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/subgoal_add_image"
        android:tint="@color/colorYellow"
        android:src="@drawable/goal_add_snake"
    />

    <EditText
        android:inputType="text"
        android:id="@+id/subgoal_add_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/subgoal_add_name_snake_icon"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/subgoal_add_image"
        android:hint="@string/subgoal_add_name_text"
        android:textColorHint="@android:color/white"
        android:backgroundTint="@android:color/white"
    />

    <ImageView
        android:id="@+id/subgoal_add_date_snake_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/subgoal_add_name_text"
        android:tint="@color/colorYellow"
        android:src="@drawable/goal_add_snake"
    />

    <Button
        android:text="@string/subgoal_add_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/subgoal_add_button"
        android:background="@drawable/button_rectangle"
    />
    <Button
        android:text="@string/goal_add_deadline_text"
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/subgoal_add_date_snake_icon"
        android:layout_below="@id/subgoal_add_name_text"
        android:id="@+id/button2"
        android:background="@drawable/button_rectangle"
    />

</RelativeLayout>
